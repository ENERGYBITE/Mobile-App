<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/bottom_sheet_top_padding"
        android:paddingTop="@dimen/bottom_sheet_top_padding">

        <TextView
            android:id="@+id/tvBottomSheetTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="start"
            android:paddingEnd="@dimen/bottom_sheet_left_padding"
            android:paddingStart="@dimen/bottom_sheet_left_padding"
            android:textColor="@color/colorDialogTitle"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/btnCloseDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/bottom_sheet_left_padding"
            android:backgroundTint="@color/colorDialogButton"
            android:gravity="end"
            android:paddingStart="@dimen/bottom_sheet_left_padding"
            android:text="@string/btnDialogSuccess"
            android:textColor="@color/colorDialogButton"
            android:textSize="22sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent" />

    <LinearLayout
        android:id="@+id/bottomSheetContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/bottom_sheet_bottom_padding"
        android:paddingTop="@dimen/bottom_sheet_top_padding">

    </LinearLayout>
</LinearLayout>