<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/bottom_sheet_top_padding"
        android:paddingBottom="@dimen/bottom_sheet_top_padding"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/btnCloseDialog"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:textSize="22sp"
            android:gravity="end"
            android:layout_alignParentStart="true"
            android:layout_alignWithParentIfMissing="true"
            android:paddingStart="@dimen/bottom_sheet_left_padding"
            android:paddingEnd="@dimen/bottom_sheet_left_padding"
            android:textColor="@color/colorDialogButton"
            android:tint="@color/colorDialogTitle"
            android:src="@drawable/ic_close"/>
        <TextView
            android:id="@+id/tvBottomSheetTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:gravity="start"
            android:layout_toRightOf="@id/btnCloseDialog"
            android:paddingStart="@dimen/bottom_sheet_left_padding"
            android:paddingEnd="@dimen/bottom_sheet_left_padding"
            android:layout_alignParentStart="true"
            android:textColor="@color/colorDialogTitle"/>
        <TextView
            android:id="@+id/btnSubmitDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:gravity="end"
            android:layout_alignParentEnd="true"
            android:layout_alignWithParentIfMissing="true"
            android:paddingStart="@dimen/bottom_sheet_left_padding"
            android:paddingEnd="@dimen/bottom_sheet_left_padding"
            android:textColor="@color/colorDialogButton"
            android:text="OK"/>

        <ProgressBar
            android:id="@+id/pbValidating"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_marginEnd="10dp"
            android:indeterminate="true"
            android:visibility="gone"
            android:indeterminateTint="@color/colorInverseText"
            android:indeterminateTintMode="src_in" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent"
        />
    <LinearLayout
        android:id="@+id/bottomSheetContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:paddingTop="@dimen/bottom_sheet_top_padding"
        android:paddingBottom="@dimen/bottom_sheet_bottom_padding">
        <com.zillious.widget.input.CustomEditText
            android:id="@+id/etInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Enter CVV"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:theme="@style/TextLabel.Small"
            />
    </LinearLayout>
</LinearLayout>